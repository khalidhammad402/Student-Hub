<%- include("partials/header1"); -%>
<link rel="stylesheet" href="/css/profile.css">
<%- include("partials/header2"); -%>

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4> <%=user.username%> </h4>
                                <p class="text-secondary mb-1">Full Stack Developer</p>
                                <p class="text-muted font-size-sm"><%=user.institute%></p>
                            </div>
                        </div>
                    </div>
                </div><br>
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <h6>Bookmarked Articles</h6><hr>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="row gutters-sm">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h6>Portfolio</h6><hr>
                            <button type="submit" class="btn btn-md btn-success">Add</button>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6>My Articles</h6><hr>
                                <% for(var i=0; i<result_res.length; i++){ %>
                                    <a href="/resources/<%=result_res[i]._id%>">
                                        <%= result_res[i].title %>
                                    </a><br>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6>My Experiences</h6><hr>
                                <% for(var i=0; i<result_exp.length; i++){ %>
                                    <a href="/internship/<%=result_exp[i]._id%>">
                                        <%= result_exp[i].title %>
                                    </a><br>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include("partials/footer"); -%>